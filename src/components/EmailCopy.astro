---
const email = "lauzubiri@gmail.com";
---

<div
  class="inline-flex items-center border border-gray-300 rounded bg-amber-50 shadow-sm w-fit overflow-hidden"
>
  <span class="px-3 text-gray-700 select-all">
    {email}
  </span>

  <button
    id="copy-btn"
    data-content={email}
    class="p-2 hover:bg-gray-200/70 h-fit text-gray-600 bg-gray-50 transition-colors focus:outline-none"
    title="Copiar email"
  >
    <svg
      id="icon-copy"
      xmlns="http://www.w3.org/2000/svg"
      width="18"
      height="18"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      ><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path
        d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg
    >

    <svg
      id="icon-check"
      class="hidden text-green-600"
      xmlns="http://www.w3.org/2000/svg"
      width="18"
      height="18"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg
    >
  </button>
</div>

<script>
  const button = document.getElementById("copy-btn");
  const iconCopy = document.getElementById("icon-copy");
  const iconCheck = document.getElementById("icon-check");

  if (button && iconCopy && iconCheck) {
    button.addEventListener("click", async () => {
      const textToCopy = button.getAttribute("data-content");

      // CorrecciÃ³n de TypeScript: Validamos que textToCopy no sea null
      if (textToCopy) {
        try {
          await navigator.clipboard.writeText(textToCopy);

          // Feedback visual: Ocultar copia, mostrar check
          iconCopy.classList.add("hidden");
          iconCheck.classList.remove("hidden");

          setTimeout(() => {
            iconCopy.classList.remove("hidden");
            iconCheck.classList.add("hidden");
          }, 2000);
        } catch (err) {
          console.error(err);
        }
      }
    });
  }
</script>
